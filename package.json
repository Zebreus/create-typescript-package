  "scripts": {
    "build": "ncc build -e create-typescript-thing-script --out dist src/index.ts --external='@npmcli/run-script' && sed '1s;^;#!/usr/bin/env node\\n;' dist/index.js -i && chmod a+x dist/index.js",
    "format": "prettier .",
    "lint": "eslint --cache && tsc --noEmit",
    "test": "jest",
    "prepack": "ncc build -e create-typescript-thing-script --out dist --minify src/index.ts --external='@npmcli/run-script' && sed '1s;^;#!/usr/bin/env node\\n;' dist/index.js -i && chmod a+x dist/index.js",
    "prepublish": "eslint --cache && tsc --noEmit",
    "start": "ncc run -e create-typescript-thing-script src/index.ts --external='@npmcli/run-script' --external='prettier-plugin-organize-imports'"
  },
  "files": [
    "dist/index.js"
  ],
  "keywords": [
    "application",
    "bin",
    "executable"
  ],
  "bin": {
    "create-typescript-thing": "dist/index.js"
  },
  "dependencies": {
    "@npmcli/run-script": "^4.1.3"
  }
