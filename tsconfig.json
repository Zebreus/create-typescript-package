{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./src/",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
